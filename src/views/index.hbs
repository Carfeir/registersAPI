<div class="container p-4">
    <div class="row">
        <div class="container">
            <h2>Current balance:</h2>
            <hr>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <h4 class="padding-right-4 color-light">Filter by:</h4>
                <a href="/registers">
                    <button class="btn btn-secondary me-md-1" type="button">All</button>
                </a>
                <a href="/registers/income">
                    <button class="btn btn-secondary me-md-1" type="button">Income</button>
                </a>
                <a href="/registers/outgoing">
                    <button class="btn btn-secondary me-md-1" type="button">Outgoing</button>
                </a>
            </div>
            <hr>
            <div class="table-responsive p-2">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Concept</th>
                            <th>Amount</th>
                            <th>Created at</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each registers}}
                        <tr>
                            <td>{{concept}}</td>
                            <td>${{amount}}</td>
                            <td>{{timeago created_at}}</td>
                            <td>{{type}}</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="/registers/delete/{{id}}">
                                        <button type="button" class="btn btn-danger">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </a>
                                    <a href="/registers/edit/{{id}}">
                                        <button type="button" class="btn btn-light">
                                            <i class="far fa-edit"></i>
                                        </button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {{else}}
                        <div class="col-md-4 mx-auto">
                            <div class="card card-body text-center">
                                <p>There are not registers saved yet</p>
                                <a href="/registers/add">Create One!</a>
                            </div>
                        </div>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>